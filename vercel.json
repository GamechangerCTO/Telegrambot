{
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 120
    },
    "src/app/api/automation/cron/**/*.ts": {
      "maxDuration": 180
    }
  },
  "crons": [
    {
      "path": "/api/automation/cron/morning-discovery",
      "schedule": "0 7 * * *",
      "comment": "Daily match discovery and importance scoring"
    },
    {
      "path": "/api/automation/cron/dynamic-content", 
      "schedule": "0,30 6-11,13-17,19-23 * * *",
      "comment": "ðŸŽ¯ OPTIMIZED SMART SCHEDULER - Runs twice per hour during active periods, skips lunch (12-13) for efficiency"
    },
    {
      "path": "/api/automation/cron/live-updates",
      "schedule": "*/3 14-23 * * *",
      "comment": "âš¡ OPTIMIZED Live updates - Every 3 mins during prime match hours (14-23 UTC)"
    },
    {
      "path": "/api/automation/cron/hourly", 
      "schedule": "0 8,12,16,20 * * *",
      "comment": "General automation rules and system maintenance"
    }
  ],
  "regions": ["iad1"],
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install"
} 